<Window x:Class="Chatbot_GUI_POE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Chatbot"
        Height="600" Width="800"
        Background="LightSeaGreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Cybersecurity Awareness Chatbot"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <!-- Chat Output -->
        <TextBox Name="ChatOutput"
         Grid.Row="1"
         Margin="0,0,0,10"
         FontSize="16"
         TextWrapping="Wrap"
         Background="White"
         Foreground="Black"
         IsReadOnly="True"
         VerticalScrollBarVisibility="Auto"
         BorderThickness="0"/>

        <!-- Input & Button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBox Name="UserInput"
                     Width="600"
                     FontSize="16"
                     Background="White"
                     Foreground="Black"
                     BorderBrush="LightSeaGreen"
                     Margin="0,0,10,0"/>
            <Button Content="Send"
                    Width="161"
                    Height="26"
                    Background="White"
                    Foreground="Black"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Click="Send_Click"/>
        </StackPanel>
    </Grid>
</Window>
